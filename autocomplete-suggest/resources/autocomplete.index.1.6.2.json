{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 8
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "suggestion": {
      "properties": {
        "type": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "analyzer": "autocomplete"
        }
      }
    }
  }
}
